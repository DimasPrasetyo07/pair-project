<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>
<body>
    <h1>ShoPai Product List</h1>
    <a href="/user"><button>User List</button></a>
    <a href="/product/add"><button>Add New Product</button></a><br><br>
    
    <form action="/product" method="get">
        <input type="text" name="search" placeholder="search product">
        <input type="submit" value="search">
      </form>
      <br><br>
    <table border="2">
        <tr>
          <th>No.</th>  
          <th>Product Name</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Action</th>
        </tr>
        <% result.forEach((el, i) => {%>
            <tr>
                <td><%=i + 1%></td>  
              <td><%=el.name%></td>
              <td><%=convertToRupiah(el.price)%></td>
              <td><%=el.stock%></td>
              <td><a href="/product/<%=el.id%>/detail">Product Detail</a></td>
            </tr>

        <%}) %> 
        
        
      </table>
    
</body>
</html>